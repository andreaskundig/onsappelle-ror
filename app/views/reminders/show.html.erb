<h1>Reminder <%= @reminder.id %></h1>
<%= render 'form', reminder: @reminder %>

<p>
    <%= submit_tag "Update reminder", form: 'reminder_form' %>
    <%= button_to "Cancel", reminder_path(@reminder),
     :method => "get" %>
    <%= button_to "Edi.", edit_reminder_path(@reminder),
     :method => "get" %>
    <%= button_to "Destroy", reminder_path(@reminder),
     method: :delete,
     data: {turbo_method: :delete,
            turbo_confirm: "Are you sure?"} %>
</p>

<p>
  <%= link_to "All reminders", reminders_path %>
</p>
