<%  content_for :navigation do %>
    <%= link_to  t("New_reminder"), new_reminder_path %>
    <%= link_to t("Reminders"), reminders_path %>
    <% if @current_user %>
        <%= link_to t("sign_out"), users_sign_out_path, {locale: locale} %>
    <% end %>
<% end %>
<h1><%= t :Reminder %></h1>
<%= render 'form', reminder: @reminder do %>
    <%= button_to t('.destroy'), reminder_path(@reminder),
     method: :delete,
     form_class: 'row_button',
     data: {turbo_method: :delete,
            turbo_confirm: "Are you sure?"} %>
<% end %>
