<h1>Reminder <%= @reminder.id %></h1>
<h3>Date</h3>
<div><%= @reminder.date.strftime("%d-%m-%Y") %></div>

<h3>Recipients
  <%= turbo_frame_tag "add_user_turbo_frame" do %>
    <%= link_to "[+]", new_reminder_user_path(@reminder),
     data: {turbo_frame: 'user_form_turbo_frame'}%>
  <% end %>
</h3>

<%= turbo_frame_tag "user_form_turbo_frame" do %>
<% end %>
<% @reminder.users.each do |user| %>
  <%= render 'users/show', reminder: @reminder, user: user %>
<% end %>

<p>
  <%= button_to "Edit", edit_reminder_path(@reminder),
   :method => "get" %>
  <%= button_to "Destroy", reminder_path(@reminder),
   method: :delete,
   data: {turbo_method: :delete,
          turbo_confirm: "Are you sure?"} %>
</p>

<p>
  <%= link_to "All reminders", reminders_path %>
</p>
