<%  content_for :navigation do %>
    <%# new_reminder is a route generated by resources in routes.rb
    bin/rails routes shows all of them
    in link_to they can be used by appending _path %>
    <%= link_to t('New_reminder'), new_reminder_path %>
    <% if @current_user %>
      <%= link_to t("sign_out"), users_sign_out_path, {locale: locale} %>
    <% end %>
<% end %>
  </nav>
</header>

<h1><%= t('Reminders') %></h1>

<ul>
  <% @reminders.each do |reminder| %>
      <li>
        <%= link_to l(reminder.date.to_date, format: :long), reminder %>
        <ul>
          <% reminder.users.each do |user|%>
            <li><%= user.email %></li>
          <% end %>
        </ul>
      </li>
  <% end %>
</ul>
