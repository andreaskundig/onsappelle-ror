<%= turbo_frame_tag "recipient_#{email_to_code(user.email)}" do %>
    <% if user.errors.full_messages_for(:email).length == 0  %>
        <li>
            <span><%= user.email %></span>
            <%= hidden_field_tag 'users[][email]', user.email, id: user.id  %>
            <%= link_to(
             remove_user_inputs_path(email_code:
                                     email_to_code(user.email)),
             data: { turbo_stream: true, turbo_method: :delete},
             method: :delete) do %>
                <%= content_tag(:i, nil, class: ['fa-solid', 'fa-circle-minus'] ) %>
            <% end %><!-- end link_to -->
        </li>
    <% end %><!-- end if no errors -->
<% end %>
